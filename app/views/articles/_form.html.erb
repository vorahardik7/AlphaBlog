<style>
.container {
    
    width: 50%;
    height: 370px;
}

.form-container {
    background-color: #3b3b3b !important;
    padding: 30px;
}

.form-label {
    color: #fff !important;
}

.errors {
    background-color: red !important;
    transparency: 10 !important
}

#description {
    height: 180px;
}

</style>


<div class="container">  
    <%= render 'common/errors' %>
    <div class = "form-container">
        <%= form_with model: @article, data: { turbo: false } do |f| %>
        
            <div class="form-group row m-3">
                <%= f.label :title, "Title:", class: "form-label col-2" %><br/>
                <div class= "col-10">
                    <%= f.text_field :title, class: "form-control" %>
                </div>
            </div>
            <div class="form-group row m-3">
                <%= f.label :description, "Description:", class: "form-label col-2" %><br/>
                <div class="col-10">
                    <%= f.text_area :description, class: "form-control", id: "description" %>
                </div>
            </div>
            <%= f.submit class: "btn btn-success m-2" %>
            <%= link_to 'Return to article list', articles_path, class: "btn btn-secondary m-2" %>
        <% end %>
    </div>
</div>
